block content
  h1= title
  hr
  div(class="pure-g")
    div(class="pure-u-1-2 left_side" id="leds_field")
      h2.
        LED
      select(id="ledselect", name="ledselect", placeholder="select led")
        option(value='', disabled, selected, style='display:none;').
          select LED
    div(class="pure-u-1-2 right_side")
      h2.
        Color
      div(class='rgb_controls')
        input(class='red_slider slider', style='display:none;')
        input(class='green_slider slider', style='display:none;')
        input(class='blue_slider slider', style='display:none;')
  div(class="pure-g")
    button(id="add_ledstripe", class="pure-button").
      ADD LED
